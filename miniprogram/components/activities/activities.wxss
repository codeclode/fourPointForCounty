.activitiesContainer{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.activitieContainer{
  width: 100%;
  padding: 1vh 0;
  border-bottom: gray 1rpx dotted;
}

.imgContainer{
  height: 0;
  padding-bottom: 35%;
  position: relative;
}

.activitieContainer image{
  border-radius: 15rpx;
  width: 100%;
  height: 100%;
  position: absolute;
  /* aspect-ratio: 16 / 6; */
}

.text{
  display: grid;
  grid-template-columns: 1fr;
  grid-template-areas: "a"
                        "b" 
                        "c"
                        "d";
}

.text view{
  text-align: center;
  vertical-align: middle;
  word-break: break-all;
  word-wrap:break-word;
}

.name,.school{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.name{
  display: inline-block;
  grid-area: a;
  font-size: 2em;
  font-weight: bold;
  text-align: center;
}

.school{
  background-color: grey;
  border-radius: 15rpx;
  font-size: 1.3em;
  font-weight: 600;
  color: snow;
  grid-area: b;
}

.time{
  grid-area: c;
}

.peopleContainer{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.bg-blue{
  background-color: skyblue;
}

.bg-pink{
  background-color: pink;
}

.bg-red{
  background-color: rgba(219, 57, 7, 0.849);
}

.bg-green{
  background-color: rgb(79, 175, 84);
  color: black;
}