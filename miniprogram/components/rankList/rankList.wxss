.userContainer{
  display: grid;
  grid-template-columns: 1fr 2fr 9fr;
  align-items: center;
  gap: 5%;
  padding: 3% 0;
}

.userContainer:nth-of-type(odd){
  background-color: #d1d1d1;
}

.userContainer:nth-of-type(even){
  background-color: #e7dede;
}

.imageContainer{
  height: 0;
  padding-bottom: 100%;
  position: relative;
}

.imageContainer image{
  border-radius: 50%;
  width: 100%;
  height: 100%;
  position: absolute;
  /* aspect-ratio: 1/1; */
}

.userInfo{
  display: flex;
  justify-content: space-between;
  font-size: 1.5em;
}

.rank{
  text-align: center;
  font-weight: 600;
  font-size: 1.5em;
}

.userContainer:nth-of-type(1) .rank{
  color: #f8e025;
}

.userContainer:nth-of-type(2) .rank{
  color: silver;
}

.userContainer:nth-of-type(3) .rank{
  color: #fddfce;
}

